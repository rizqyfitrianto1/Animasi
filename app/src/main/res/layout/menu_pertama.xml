<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/logo_cruise"
            android:id="@+id/imgmenu"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alwis"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#020F68"
                android:id="@+id/text_logo" android:fontFamily="serif-monospace"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cruise"
                android:layout_weight="1"
                android:gravity="start"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#0D558D"
                android:id="@+id/text_logo2" android:fontFamily="serif-monospace"/>


    </LinearLayout>

</LinearLayout>